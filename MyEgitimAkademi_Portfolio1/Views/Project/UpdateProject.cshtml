@model MyEgitimAkademi_Portfolio1.Models.Project
@{ ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Proje Güncelleme Sayfası</h2>

<form method="post">
    <label>Proje ID</label>
    @Html.TextBoxFor(x => x.ProjectID, new { @class = "form-control" })
    <label>Proje Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Proje Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Proje Kategorisi</label>
    @Html.TextBoxFor(x => x.ProjectCategory, new { @class = "form-control" })
    <br />
    <label>Proje Tamamlanma Günü</label>
    @Html.TextBoxFor(x => x.CompleteDay, new { @class = "form-control" })
    <br />
    <label>Proje Bütçesi</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Projeyi Güncelle</button>
</form>
